{
  "private": true,
  "name": "softeng-framework-mqp",
  "version": "1.0.0",
  "description": "",
  "license": "UNLICENSED",
  "workspaces": [
    "frontend",
    "backend",
    "common"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com/Landaman/softeng-framework-mqp.git"
  },
  "scripts": {
    "dev": "docker-compose -f docker-compose.dev.yaml up --build --renew-anon-volumes -d",
    "dev:stop": "docker-compose -f docker-compose.dev.yaml down --volumes --rmi local",
    "prod": "docker-compose -f docker-compose.prod.yaml up --build -d",
    "prod:stop": "docker-compose -f docker-compose.prod.yaml down",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix"
  },
  "packageManager": "yarn@3.5.1",
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.0",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "^8.41.0",
    "typescript": "^5.0.4"
  }
}
